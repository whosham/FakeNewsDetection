<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorDarkBlue"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@color/colorDarkBlue"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/assessment_eventid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="event_id"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/assessment_rank_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="Event Rank"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/assessment_upvote_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_thumb_up"
                        android:tint="@color/colorGreen" />

                    <ImageView
                        android:id="@+id/assessment_downvote_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:backgroundTint="@color/colorPurple"
                        android:padding="2dp"
                        android:src="@drawable/ic_thumb_down"
                        android:tint="@color/colorOrange" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/assessment_text_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="8dp"
                android:text="some dummy text to fill the space"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/assessment_image_iv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="2dp"
                android:scaleType="center" />

            <!--<RatingBar-->
                <!--android:id="@+id/event_ratingBar"-->
                <!--style="?android:attr/ratingBarStyleIndicator"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:isIndicator="true"-->
                <!--android:numStars="5"-->
                <!--android:rating="2.5" />-->

            <TextView
                android:id="@+id/assessment_timestamp_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:text="timestamp"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="italic" />

        </LinearLayout>

        <View style="@style/Divider.Horizontal" />


    </LinearLayout>


</android.support.v7.widget.CardView>