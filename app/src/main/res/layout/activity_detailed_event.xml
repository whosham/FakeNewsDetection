<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailedEvent">

    <ImageView
        android:id="@+id/iv_detail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/add_image" />

    <TextView
        android:id="@+id/tv_location_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Location"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_upvote_iv"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:padding="2dp"
            android:src="@drawable/ic_thumb_up"
            android:tint="@color/colorGreen" />

        <TextView
            android:id="@+id/event_upvote_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="999"

            android:textSize="20sp" />

        <ImageView
            android:id="@+id/event_downvote_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/colorPurple"
            android:padding="2dp"
            android:src="@drawable/ic_thumb_down"
            android:tint="@color/colorOrange" />

        <TextView
            android:id="@+id/event_downvotes_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="999"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/event_upvote_button_iv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="64dp"
            android:padding="2dp"
            android:src="@drawable/ic_thumb_up"
            android:tint="@color/colorSilver" />


        <ImageView
            android:id="@+id/event_downvote_button_iv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="64dp"
            android:padding="2dp"
            android:src="@drawable/ic_thumb_down"
            android:tint="@color/colorSilver" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_description_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="Description"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

</LinearLayout>